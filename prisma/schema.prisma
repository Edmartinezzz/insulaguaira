generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  phone        String   @unique
  email        String?  @unique
  password     String
  role         UserRole @default(USER)
  isActive     Boolean  @default(true)
  resetToken   String?
  resetExpires DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  person       Person?
}

model Sector {
  id            String         @id @default(cuid())
  name          String         @unique
  orders        Order[]
  // Relaciones inversas para inventario, vehículos y personas
  persons       Person[]       @relation("SectorPersons")
  vehicles      Vehicle[]      @relation("SectorVehicles")
  fuelInventory FuelInventory? @relation("SectorInventory")
}

model Driver {
  id         String     @id @default(cuid())
  name       String
  phone      String     @unique
  deliveries Delivery[]
}

model Order {
  id           String      @id @default(cuid())
  createdAt    DateTime    @default(now())
  customerName String
  phone        String
  address      String
  qty          Int
  gasType      String
  status       OrderStatus @default(PENDIENTE)
  sectorId     String
  sector       Sector      @relation(fields: [sectorId], references: [id])
  personId     String?
  person       Person?     @relation("PersonOrders", fields: [personId], references: [id])
  delivery     Delivery?
}

model Delivery {
  id       String         @id @default(cuid())
  orderId  String         @unique
  order    Order          @relation(fields: [orderId], references: [id])
  driverId String?
  driver   Driver?        @relation(fields: [driverId], references: [id])
  status   DeliveryStatus @default(PENDIENTE)
}

enum OrderStatus {
  PENDIENTE
  ASIGNADO
  COMPLETADO
  CANCELADO
}

// Modelo para personas que consumen gasolina
model Person {
  id            String         @id @default(cuid())
  name          String
  phone         String         @unique
  sectorId      String?
  sector        Sector?        @relation("SectorPersons", fields: [sectorId], references: [id])
  litersBalance Float          @default(0)
  vehicles      Vehicle[]      @relation("PersonVehicles")
  orders        Order[]        @relation("PersonOrders")
  user          User?          @relation(fields: [userId], references: [id])
  userId        Int?           @unique
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

// Vehículos que pertenecen a sectores (p.ej. flota pública/privada)
model Vehicle {
  id              String   @id @default(cuid())
  plate           String   @unique
  capacity        Int
  litersAvailable Int      @default(0)
  sectorId        String?
  sector          Sector?  @relation("SectorVehicles", fields: [sectorId], references: [id])
  personId        String? 
  owner           Person?  @relation("PersonVehicles", fields: [personId], references: [id])
  createdAt       DateTime @default(now())
}

 

// Inventario de combustible por sector (para control público)
model FuelInventory {
  id              String   @id @default(cuid())
  sectorId        String   @unique
  sector          Sector   @relation("SectorInventory", fields: [sectorId], references: [id])
  litersAvailable Int      @default(0)
  updatedAt       DateTime @updatedAt
}

enum DeliveryStatus {
  PENDIENTE
  EN_CAMINO
  ENTREGADO
  FALLIDO
}
